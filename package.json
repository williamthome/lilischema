{
  "name": "schema-lib",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "dev": "npm run build && ts-node-dev --respawn --transpile-only --inspect -r tsconfig-paths/register src/index.ts",
    "start": "npm run env NODE_ENV=production -- node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index.js",
    "update": "npx npm-check-updates -u && npm install",
    "lint": "npx eslint src/* --ext .ts --cache --fix",
    "format": "npx prettier --write ./src/**/*.{ts,json}"
  },
  "author": "William Fank Thom√©",
  "license": "ISC",
  "private": true,
  "devDependencies": {
    "@types/node": "^14.14.40",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "git-commit-msg-linter": "^3.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.6",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "npx eslint --cache --fix",
      "npx prettier --write"
    ]
  }
}
